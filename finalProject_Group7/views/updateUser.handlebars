<div class="content">
   <div class="container-fluid">
      <div class="jumbotron" id="head-doc">
         <header>
            <h1>Edit User</h1>
         </header>
         {{#if error}}
         <p class = "alertMsg">*{{error}}</p>
         {{/if}}
         {{#if alertMsg}}
         <p class = "alertMsg">*{{alertMsg}}</p>
         {{/if}}
         
         <form id="updateUser-form" action="/user/update" method="POST">
          <div class="alertMsg" id="error" hidden></div>
            <div class="inputDiv">
               <label for="email"> Email</label><br>
               <input class="major" type="email" id="email" name="email" value={{user.email}} pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required/>
            </div>
            <div class="row inputDiv">
               <div class="col-sm-6"><label for="firstname">First Name</label><br><input type="text" id="firstname"
                  name="firstname" value="{{user.firstname}}" pattern="[A-Za-z]{1,15}" title="Must contain only text" required//></div>
               <div class="col-sm-6"><label for="lastname"> Last Name</label><br><input type="text" id="lastname"
                  name="lastname" value="{{user.lastname}}" pattern="[A-Za-z]{1,15}" title="Must contain only text" required//></div>
            </div>
            <div class="row inputDiv">
               <div class="col-sm-6">
                  <label for="dob"> Birth Date</label><br>
                  <input type="date" id="dob" name="dob" required >
               </div>
               <div class="col-sm-6">
                  <label for="gender"> Gender</label><br>
                  <select id="gender" name="gender" required>
                     <option value="">Choose</option>
                     <option value="Male">Male</option>
                     <option value="Female">Female</option>
                  </select>
               </div>
            </div>
            <div class="row inputDiv">
               <div class="col-sm-6">
                  <label for="streetAddress">Street Address *</label><br>
                  <input type="text" id="streetAddress" name="streetAddress"  value="{{user.streetAddress}}">
               </div>
               <div class="col-sm-2">
                  <label for="aptno">Apt No.</label><br>
                  <input type="text" id="aptno" name="aptno" value="{{user.aptno}}">
               </div>
               <div class="col-sm-4">
                  <label for="city"> City</label><br>
                  <input type="text" id="city" name="city" value="{{user.city}}" pattern="[A-Za-z\s]{1,15}" title="Must contain only text" required/>
               </div>
            </div>
            <div class="row inputDiv">
               <div class="col-sm-6">
                  <label for="state">State</label><br>
                  <input type="text" id="state" name="state" value="{{user.state}}" pattern="[A-Za-z\s]{1,15}" title="Must contain only text" required/>
               </div>
               <div class="col-sm-6">
                  <label for="zipCode">Zip Code</label><br>
                  <input type="number" id="zipCode" name="zipCode" value="{{user.zipCode}}" required/>
               </div>
            </div>
            <div class="inputDiv">
               <label for="country"> Country</label><br>
               <input type="text" id="country" name="country" value="{{user.country}}" pattern="[A-Za-z\s]{1,15}" title="Must contain only text" required/>
            </div>
            <div class="row inputDiv">
               <div class="col-sm-6">
                  <label for="username">Username</label><br>
                  <input type="text" id="username" name="username" value="{{user.username}}" required/>
               </div>
               <div class="col-sm-6">
                  <label for="role">Role</label><br>
                  <select id="role" name="role" required>
                     <option value="">Choose</option>
                     <option value="gymMember">Gym Member</option>
                     <option value="TRAINER">Trainer</option>
                     <option value="ADMIN">Admin</option>
                     <option value="STAFF">Staff</option>
                  </select>
               </div>
            </div>
            <div class="row inputDiv">
               <div class="col-sm-6">
                  <label for="password">Password</label><br>
                  <input type="password" id="password" name="password"  pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required/>
               </div>
               <div class="col-sm-6">
                  <label for="password">Confirm Password</label><br>
                  <input type="password" id="confirmPassword" name="confirmPassword"  pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required/>
               </div>
            </div>
            <input type="hidden" name="userId" value={{user._id}}>
            <div class="centered">
               <div class="row">
                  <div class="col-sm-6"><input type="submit"  value="Update"></div>
                  <div class="col-sm-6"> <input type="button" onclick="window.location.href='/user/view/{{user._id}}'"
                     id="cancel" value="Cancel"></div>
               </div>
            </div>
         </form>
      </div>
   </div>
</div>
<script src="/public/form.js"></script>