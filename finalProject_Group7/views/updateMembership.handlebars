<div class="content">
   <div class="container-fluid">
      <div class="jumbotron" id="head-doc">
         <header>
            <h1>Edit Membership</h1>
         </header>
         {{#if error}}
         <p class = "alertMsg">*{{error}}</p>
         {{/if}}
          {{#if alertMsg}}
         <p class = "alertMsg">*{{alertMsg}}</p>
         {{/if}}
         <form id="updateMembership-form" action="/membership/update" method="POST">
            <div class="inputDiv">
               <label for="membershipname"> Membership Name</label><br>
               <input class="major" type="text" name="membershipname" id="membershipname" value="{{membership.membershipname}}" pattern="[A-Za-z\s]{1,15}" title="Must contain only text" required>
            </div>
            <div class="inputDiv">
               <label for="membershipperiod">Membership Period(days)</label><br>
               <input class="major" type="number" name="membershipperiod" id="membershipperiod" value ={{membership.membershipperiod}} min="1" max="365" required>
            </div>
            <div class="inputDiv">
               <label for="signupfees">Signup Fees($)</label><br>
               <input class="major" type="number" id="signupfees" name="signupfees" value ="{{membership.signupfees}}" min="100" max="1000" required>
            </div>
            <div class="inputDiv">
               <label for="services">Services</label><br>
                  <input class="major" type="text" id="services" name="services" value ="{{membership.services}}" pattern="[A-Za-z\s]{1,15}" title="Must contain only text" required>
            </div>
            <div id="inputDiv">
               <label for="description">Description</label><br>
                  <input class="major" id="description" type="text" name="description" value ="{{membership.description}}" >
               
             </div>
            <input type="hidden" name="membershipId" value={{membership._id}}>
            <div class="centered">
               <div class="row">
                  <div class="col-sm-6"><input type="submit"  value="Update"></div>
                   <div class="col-sm-6"> <input type="button" onclick="window.location.href='/membership/view/{{membership._id}}'"
                                id="cancel" value="Cancel"></div>
               </div>
            </div>
         </form>
      </div>
   </div>
</div>